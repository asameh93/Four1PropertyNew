                       TextColor="#FF071D66" HorizontalOptions="CenterAndExpand"/>

                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="0,20,0,0">
                    <Picker Title="{trans:Translate Country}" Style="{StaticResource HomeButtonStyle}"
