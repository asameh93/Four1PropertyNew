            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="Red" HeightRequest="100">

                <Image x:Name="Sale" Source="Choose1.png" HorizontalOptions="StartAndExpand"
                       WidthRequest="150" HeightRequest="400"
                       IsVisible="True" VerticalOptions="StartAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSaleClicked"/>
                    </Image.GestureRecognizers>
                </Image>

                <Image x:Name="SaleBlue" Source="Choose11.png" Grid.Column="1" 
                       HorizontalOptions="StartAndExpand"  VerticalOptions="StartAndExpand" IsVisible="False" />

                <Image x:Name="Rent" Source="Choose2.png" HorizontalOptions="EndAndExpand"
                       WidthRequest="150" HeightRequest="400" Aspect="AspectFit"
                       VerticalOptions="StartAndExpand" IsVisible="True">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRentClicked"/>
                    </Image.GestureRecognizers>
                </Image>

                <Image x:Name="RentBlue" Source="Choose22.png" Grid.Column="2" 
                       HorizontalOptions="EndAndExpand" VerticalOptions="StartAndExpand" IsVisible="False"  />


            </StackLayout>

            <StackLayout Margin="20">

