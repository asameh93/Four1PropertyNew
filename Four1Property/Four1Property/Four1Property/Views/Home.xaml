                            FontSize="15" BackgroundColor="White" TextColor="#FF071D66" HorizontalOptions="StartAndExpand" />

                    <Picker Title="{trans:Translate City}" Style="{StaticResource HomeButtonStyle}"
                            SelectedIndexChanged="CityPicker_Clicked" 
                            FontSize="15"  BackgroundColor="White" WidthRequest="100"
                            TextColor="#FF071D66" HorizontalOptions="CenterAndExpand"/>

                    <Picker Title="{trans:Translate Area}" Style="{StaticResource HomeButtonStyle}"
                            SelectedIndexChanged="AreaPicker_Clicked" FontSize="15" WidthRequest="100"
                            BackgroundColor="White" TextColor="#FF071D66" HorizontalOptions="EndAndExpand"/>

                </StackLayout>

                <Label Text="{trans:Translate OR}" FontSize="15" TextColor="#FF071D66"
                       HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>

                <Button Text="{trans:Translate MapView}" BackgroundColor="White" FontSize="11" Margin="0,20,0,0"
                        Clicked="MapView_Clicked" TextColor="#FF071D66" BorderRadius="7" BorderColor="#FF071D66" BorderWidth="2"/>

            </StackLayout>

            <Button Text="{trans:Translate ApplyFilter}" VerticalOptions="EndAndExpand"
